# Control Core - Production Control Plane Configuration
# Copy this file to .env and fill in your values

# Version
CC_VERSION=latest

# Database Configuration
POSTGRES_DB=control_core_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD
POSTGRES_PORT=5432

# Redis Configuration
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD

# PAP API Configuration
PAP_API_PORT=8000
SECRET_KEY=CHANGE_ME_GENERATE_RANDOM_KEY
JWT_SECRET_KEY=CHANGE_ME_GENERATE_JWT_KEY
JWT_EXPIRE_MINUTES=30
CREDENTIAL_ENCRYPTION_KEY=CHANGE_ME_GENERATE_FERNET_KEY

# Admin User
ADMIN_USER=ccadmin
ADMIN_PASS=CHANGE_ME_STRONG_PASSWORD

# PAP UI Configuration
PAP_UI_PORT=80
PAP_API_URL=http://localhost:8000

# Signup Service Configuration
SIGNUP_PORT=8002
SIGNUP_SECRET_KEY=CHANGE_ME_GENERATE_RANDOM_KEY

# Stripe Configuration (Optional - for billing)
