# Control Core Signup Service Environment Configuration

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/controlcore_signup
SECRET_KEY=your-secret-key-here

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Stripe Price IDs (create these in your Stripe dashboard)
STRIPE_KICKSTART_MONTHLY_PRICE_ID=price_kickstart_monthly
STRIPE_KICKSTART_ANNUAL_PRICE_ID=price_kickstart_annual
STRIPE_PRO_MONTHLY_PRICE_ID=price_pro_monthly
STRIPE_PRO_ANNUAL_PRICE_ID=price_pro_annual
STRIPE_CUSTOM_MONTHLY_PRICE_ID=price_custom_monthly
STRIPE_CUSTOM_ANNUAL_PRICE_ID=price_custom_annual

# Auth0 Configuration
AUTH0_DOMAIN=your-domain.auth0.com
AUTH0_CLIENT_ID=your-client-id
AUTH0_CLIENT_SECRET=your-client-secret

# Email Service Configuration
SENDGRID_API_KEY=your-sendgrid-key
EMAIL_FROM_ADDRESS=noreply@controlcore.io
EMAIL_FROM_NAME=Control Core

# Business Admin Console Integration
BAC_API_URL=http://localhost:8001
BAC_API_KEY=your-bac-api-key

# Kubernetes Configuration (for Pro tenant provisioning)
KUBECONFIG_PATH=/path/to/kubeconfig
HELM_CHART_PATH=/app/helm-charts/controlcore

# DNS Provider Configuration
DNS_PROVIDER=cloudflare
DNS_API_KEY=your-dns-api-key
DNS_ZONE_ID=your-zone-id
BASE_DOMAIN=app.controlcore.io

# SSL Certificate Configuration
SSL_EMAIL=admin@controlcore.io
LETSENCRYPT_STAGING=true

# File Storage Configuration
S3_BUCKET_NAME=controlcore-packages
S3_ACCESS_KEY=your-s3-access-key
S3_SECRET_KEY=your-s3-secret-key

# Application Configuration
DEBUG=false
LOG_LEVEL=INFO
CORS_ORIGINS=http://localhost:3000,https://signup.controlcore.io

# Security Configuration
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Monitoring Configuration
SENTRY_DSN=your-sentry-dsn
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
