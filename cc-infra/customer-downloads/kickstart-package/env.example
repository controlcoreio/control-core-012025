# Control Core Kickstart Package Environment Variables
# Copy this file to .env and update with your values

# Control Core Configuration
CC_TENANT_ID=your-tenant-id
CC_API_KEY=your-api-key
CC_DEPLOYMENT_MODE=standalone

# GitHub Integration
GITHUB_TOKEN=your-github-token-here
GITHUB_REPO_URL=https://github.com/your-org/your-policies-repo.git
GITHUB_WEBHOOK_SECRET=your-webhook-secret

# Database Configuration
POSTGRES_PASSWORD=your-secure-password
POSTGRES_DB=control_core_db
POSTGRES_USER=postgres

# Demo App Configuration
DEMO_DB_PASSWORD=your-demo-password
DEMO_DB_NAME=consulting_db
DEMO_DB_USER=postgres

# Service Ports
CC_FRONTEND_PORT=3000
CC_PAP_PORT=8082
CC_BOUNCER_PORT=8080
CC_OPAL_PORT=7000
CC_DB_PORT=5432

# Demo App Ports
DEMO_FRONTEND_PORT=3001
DEMO_API_PORT=8000
DEMO_DB_PORT=5433

# Security Configuration
JWT_SECRET_KEY=your-jwt-secret-key
ENCRYPTION_KEY=your-encryption-key

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Performance Configuration
WORKER_COUNT=4
MAX_WORKERS=8
CACHE_TTL=300

# Monitoring Configuration
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30

# Network Configuration
ALLOWED_ORIGINS=*
CORS_ENABLED=true
