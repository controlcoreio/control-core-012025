# Control Core PAP API Configuration

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/control_core_db

# Security
SECRET_KEY=your-secret-key-here-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# System Administrator Credentials (Required for database initialization)
CC_BUILTIN_ADMIN_USER=your_admin_username_here
CC_BUILTIN_ADMIN_PASS=your_secure_password_here

# Environment
ENVIRONMENT=development
LOG_LEVEL=info

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Auth0 Configuration
AUTH0_DOMAIN=your-domain.auth0.com
AUTH0_CLIENT_ID=your_auth0_client_id
AUTH0_CLIENT_SECRET=your_auth0_client_secret
AUTH0_AUDIENCE=your_auth0_audience

# GitHub Integration
GITHUB_TOKEN=your_github_token_here
GITHUB_REPO_URL=https://github.com/controlcore/policies

# OPAL Configuration
OPAL_POLICY_REPO_URL=https://github.com/controlcore/policies
OPAL_DATA_SOURCES_CONFIG=./config/data-sources.json

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
FROM_EMAIL=noreply@controlcore.io

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379

# PIP Data Sources Configuration
ENCRYPTION_KEY=your-32-character-encryption-key-here
OPAL_SERVER_URL=http://localhost:7002
OPAL_AUTH_TOKEN=your_opal_auth_token_here
PAP_API_URL=http://localhost:8000

# Secrets Management (Optional - for external vaults)
VAULT_URL=http://localhost:8200
VAULT_TOKEN=your_vault_token_here
AWS_REGION=us-east-1

# Monitoring
SENTRY_DSN=your_sentry_dsn_here